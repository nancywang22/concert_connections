generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  name          String
  passwordHash  String
  concerts      UserConcert[]
  createdAt     DateTime       @default(now())
}

model Artist {
  id            String     @id @default(uuid())
  name          String
  setlistFmId   String     @unique
  concerts      Concert[]
}

model Concert {
  id                 String        @id @default(uuid())
  artistId           String
  venue              String
  city               String
  date               DateTime
  setlistFmEventId   String        @unique

  artist             Artist        @relation(fields: [artistId], references: [id])
  attendees          UserConcert[]
  setlistSongs       SetlistSong[]

  createdAt          DateTime      @default(now())
}

model SetlistSong {
  id          String   @id @default(uuid())
  concertId  String
  songName   String
  songOrder  Int
  encore     Boolean

  concert    Concert  @relation(fields: [concertId], references: [id])
}

model UserConcert {
  id          String   @id @default(uuid())
  userId      String
  concertId   String
  rating      Int?
  memoryText  String?

  user        User     @relation(fields: [userId], references: [id])
  concert     Concert  @relation(fields: [concertId], references: [id])

  createdAt   DateTime @default(now())

  @@unique([userId, concertId])
}
